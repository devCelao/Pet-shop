@model ControleAcessoViewModel

 <section class="container ">
     <div class="col">
        <h2 class="text-center mb-4">Permissões de Perfil</h2>
        <form asp-controller="ControleAcesso" asp-action="BuscarDados" method="post" class="needs-validation">
            <div class="input-group mb-3">
                <input asp-for="Username" type="text" name="Username" class="form-control" aria-label="Username" aria-describedby="basic-addon1" placeholder="Digite o código de usuário" required>
            </div>
           
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </form>
    </div> 
</section> 

