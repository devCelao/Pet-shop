@using Services.Models
@model IList<PerfilModel>
<section class="d-flex flex-column align-items-center justify-content-center">

    <div class="col-md-6">
        @if (Model.Any())
        {
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Nome</th>
                        <th scope="col">Data de Cadastro</th>
                        <th scope="col">Email</th>
                        <th scope="col">Ações</th>
                    </tr>
                </thead>
                <tbody>
                     @foreach (var item in Model)
                        {
                            <tr style="color: @(item.IND_ATIVO ? "blue" : "red" )">
                                <td>@item.NOM_USUARIO</td>
                                <td>@item.DT_REGISTRO.ToString("dd/MM/yyyy")</td>
                                <td>@item.TXT_EMAIL</td>
                                <td>
                                    <div class="btn-group" role="group">
                                       
                                       @if(item.IND_ATIVO)
                                       {
                                            <a asp-controller="Perfil" asp-action="EditarCadastro" asp-route-id="@item.COD_USUARIO" class="btn btn-warning" title="Editar Cadastro">
                                                Editar
                                            </a>

                                            <form asp-controller="Perfil" asp-action="DesativarCadastro" method="post" asp-route-id="@item.COD_USUARIO"  onsubmit="return confirm('Tem certeza que deseja desativar este cadastro?');">
                                                <button type="submit" class="btn btn-danger">Desativar</button>
                                            </form>
                                       }
                                       else
                                       {
                                            <form asp-controller="Perfil" asp-action="AtivarCadastro" method="post" asp-route-id="@item.COD_USUARIO" >
                                                <button type="submit" class="btn btn-primary"> Ativar  </button>
                                            </form>
                                       }
                                      

                                    </div>
                                </td>
                            </tr>
                        }
                </tbody>
            </table>        
        }
        else
        {
            <p style="padding:50px;">
                <td colspan="6" class="text-center">Nenhum cadastro encontrado</td>
            </p>
        }
    </div>

    <div class="row mb-3">
        <div class="col text-center">
            <a asp-controller="Perfil" asp-action="NovoCadastro" class="btn btn-dark" title="Novo Cadastro">
                Novo Cadastro
            </a>
        </div>
    </div>
</section>