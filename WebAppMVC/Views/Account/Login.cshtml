@model AccountViewModel
<div class="d-flex justify-content-center align-items-center">
    <img src="~/img/login.png" class="img-fluid img-login">
    <section class="bg-form">
        <form asp-controller="Account" asp-action="Logar" method="post" class="signin-form">
            <label for="Username" class="col-sm-2 col-form-label">Usuário</label>
            <div class="input-group mb-3">
                <input asp-for="Username" type="text" name="Username" class="form-control" id="Username" placeholder="Username" required>
            </div>

            <label for="Password" class="col-sm-2 col-form-label">Senha</label>
            <div class="input-group mb-3">
                <input asp-for="Password" id="password-field" type="password" name="Password" class="form-control" aria-describedby="basic-addon1" placeholder="Password" required>
                <div class="input-group-text toggle-password" style="cursor: pointer;">
                    <img src="/icons/eye-slash.svg" alt="Show/Hide Password" id="eye-icon" style="width: 20px; height: 20px;">
                </div>
            </div>

             <div class="form-group  text-center">
                <button type="submit" class="form-control btn btn-primary submit px-3">Entrar</button>
                <small>
                    <a asp-area="" asp-controller="Account" asp-action="ForgotPass" style="color: #007bff;">Esqueci a senha</a>
                </small>
            </div>
        </form>
    </section>
</div>

<style>
    .bg-form {
        color: white;
        padding: 25px 16px;
        background-color: #2F1242;
        border-radius: 10px;
    }

    .img-login {
        margin-left: -75px;
        margin-right: -190px;
        padding-top: 70px;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const togglePassword = document.querySelector('.toggle-password');
        const passwordField = document.querySelector('#password-field');
        const eyeIcon = document.querySelector('#eye-icon');

        togglePassword.addEventListener('click', function () {
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);
            // Alternar o ícone
            eyeIcon.src = type === 'password' ? '/icons/eye-slash.svg' : '/icons/eye.svg';
        });
    });
</script>
